<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    <changeSet id="create-table-category" author="Matrosov-DY">
        <preConditions onFail="WARN"
                       onFailMessage="Failed to create table category"
                       onError="WARN"
                       onErrorMessage="Error while creating table">
            <not>
                <tableExists tableName="category"/>
            </not>
        </preConditions>
        <createTable tableName="category">
            <column name="id" type="varchar(255)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="pictureName" type="varchar(255)"/>
            <column name="request" type="varchar(255)"/>
            <column name="author" type="varchar(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>